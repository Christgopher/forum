

{{#if isEditing}}
<form>
  <div class="form-group">
    <label for="question">Question</label>
    {{input value=question id="question" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="author">Author</label>
    {{textarea value=author id="author" class="form-control" rows="15"}}
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    {{textarea value=description id="description" class="form-control" rows="15"}}
  </div>

  <button class="btn btn-primary" {{action 'save'}}>Save</button>
</form>
{{else}}
  <p>{{question}}</p>
  <p>{{author}}</p>
  <p>{{description}}</p>

  <button class="btn btn-primary" {{action 'edit'}}>Edit</button>
  <button class="btn btn-danger" {{action 'delete'}}>delete</button>
{{/if}}

{{outlet}}

<h2>Answers</h2>
{{#each answer in answers itemController="answer"}}
  <p>
    {{answer.text}}
    <button class="btn btn-xs btn-danger" {{action 'delete'}}>delete</button>
  </p>
{{/each}}

<p>{{#link-to 'new-answer' this class="btn btn-success"}}New answer{{/link-to}}</p>
